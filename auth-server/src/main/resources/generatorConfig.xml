<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC
        "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
<generatorConfiguration>

    <context id="context" targetRuntime="MyBatis3Simple">

        <plugin type="com.softwareloop.mybatis.generator.plugins.LombokPlugin"/>
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin"/>

        <commentGenerator>
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <jdbcConnection driverClass="${jdbcDriver}"
                        connectionURL="${jdbcURL}"
                        userId="${jdbcUserId}"
                        password="${jdbcPassword}">
        </jdbcConnection>

        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <javaModelGenerator targetPackage="com.newtouch.cloud.demo.organization.persistence.model" targetProject="src/main/java">
            <property name="enableSubPackages" value="false"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="mapper" targetProject="src/main/resources">
            <property name="enableSubPackages" value="false"/>
        </sqlMapGenerator>

        <javaClientGenerator targetPackage="com.newtouch.cloud.demo.organization.persistence.mapper" type="ANNOTATEDMAPPER" targetProject="src/main/java">
            <property name="enableSubPackages" value="false"/>
        </javaClientGenerator>

        <table schema="spring_cloud_demo_organization" tableName="corporation" enableCountByExample="false" enableDeleteByExample="false"
               enableSelectByExample="true" enableUpdateByExample="false">
            <property name="selectAllOrderByClause" value="corp_name"/>
            <generatedKey column="corp_id" sqlStatement="MySql"/>
        </table>

        <table schema="spring_cloud_demo_organization" tableName="department" enableCountByExample="false" enableDeleteByExample="false"
               enableSelectByExample="true" enableUpdateByExample="false">
            <property name="selectAllOrderByClause" value="dept_name"/>
            <generatedKey column="dept_id" sqlStatement="MySql" />
        </table>

        <table schema="spring_cloud_demo_organization" tableName="employee" enableCountByExample="false" enableDeleteByExample="false"
               enableSelectByExample="true" enableUpdateByExample="false">
            <property name="selectAllOrderByClause" value="employee_name"/>
            <generatedKey column="employee_id" sqlStatement="MySql" />
        </table>
    </context>
</generatorConfiguration>